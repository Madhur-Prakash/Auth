FROM python:3.10-slim

WORKDIR /authentication

# Install netcat for wait script
RUN apt-get update && apt-get install -y netcat-openbsd && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Make wait script executable
RUN chmod +x waitforkafka.sh

# Default CMD just runs the Kafka config (compose will override this with wait script + Python)
CMD ["python", "authentication/config/helper_config/kafka1_config.py"]
